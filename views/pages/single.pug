extends ../layout

block content
	if event
		.jumbotron.mt-4
			h1#name.display-4= event.name
			p.lead= event.description
			input(type="hidden" id="slug" value=event.slug)
			hr.my-4
			.d-flex.justify-content-end
				a.btn.btn-warning(href=`/api/events/${event.slug}/edit`) Edit
				input.btn.btn-danger.mx-3(type="button", value="Delete" onclick='deleteEvent()')
	else
		.jumbotron.jumbotron-fluid
			.container
				h1.display-4 Event Error
				p.lead
					| Please go to Home page and choose an Event you`d like to see in more details.
	
	script(src="/js/delete.js")
	script(src="https://unpkg.com/axios/dist/axios.min.js")
